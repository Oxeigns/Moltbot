{
  "name": "moltbot-heroku-wrapper",
  "description": "Heroku worker-only wrapper for Clawdbot with build-time installs.",
  "keywords": [
    "clawdbot",
    "moltbot",
    "telegram",
    "heroku",
    "worker"
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": {
      "description": "Telegram bot token from BotFather.",
      "required": true
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key used by the OpenAI provider.",
      "required": true
    },
    "MODEL": {
      "description": "OpenAI model to use.",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    }
  },
  "buildpacks": [
    {
      "url": "heroku-community/apt"
    },
    {
      "url": "heroku/nodejs"
    }
  ]
}
