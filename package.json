{
  "name": "moltbot-heroku-wrapper",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "24.x"
  },
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "neverBuiltDependencies": [
      "@mariozechner/clipboard-linux-x64-gnu"
    ]
  },
  "scripts": {
    "heroku-prebuild": "corepack enable",
    "heroku-postbuild": "pnpm add clawdbot@latest --ignore-scripts --no-optional",
    "postinstall": "node scripts/disable-clipboard.js",
    "start": "bash start.sh"
  }
}
